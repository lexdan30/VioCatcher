<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addContent"
    tools:context="com.example.friendspc.viocatcher.AddFragment"
    tools:ignore="ExtraText">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="371dp"
        android:scaleX=".9"
        android:scaleY=".9"
        android:layout_height="130dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ucblogo"
        tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded"
        android:layout_alignTop="@+id/button6"
        android:layout_marginTop="65dp"
        android:elevation="4dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etIDNo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="ID Number"
        android:inputType="number"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#4E311F"
        android:textColor="#4E311F"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    <EditText
        android:id="@+id/etFname"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="First Name"
        android:inputType="text"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#4E311F"
        android:textColor="#4E311F"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    <EditText
        android:id="@+id/etMname"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Middle Name"
        android:inputType="text"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#4E311F"
        android:textColor="#4E311F"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    <EditText
        android:id="@+id/etFamname"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Family Name"
        android:inputType="text"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#4E311F"
        android:textColor="#4E311F"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    <EditText
        android:id="@+id/etCourse"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Course"
        android:inputType="text"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#4E311F"
        android:textColor="#4E311F"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    <EditText
        android:id="@+id/etYear"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Year"
        android:inputType="number"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#4E311F"
        android:textColor="#4E311F"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    <Button
        android:text="ADD"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/btnAdd"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#4E311F"
        android:textSize="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="10dp"
        android:background="#FF8C00"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="65dp"
        android:background="#FF8C00"
        android:gravity="center"
        android:textColor="#4E311F"
        android:textSize="20dp"
        tools:ignore="HardcodedText,SpUsage" />

</FrameLayout>
